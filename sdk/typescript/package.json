{
  "name": "@cooperation/linked-claims",
  "version": "0.1.0",
  "description": "TypeScript SDK for LinkedClaims - create and manage trust claims",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
